			"name": "Test GET /titles",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Must have proper content\", function () {",
							"    pm.expect(Array.isArray(",
							"        pm.response.json().content",
							"    )).to.eql(true);",
							"});",
							"",
							"pm.test(\"Must have proper HATEOAS links\", function () {",
							"    const API_VERSION = pm.collectionVariables.get(\"API_VERSION\");",
							"",
							"    if (!API_VERSION) {",
							"        throw new Error(\"No API_VERSION?\");",
							"    }",
							"",
							"    const data = pm.response.json();",
							"    pm.expect(typeof data._links).to.eql(\"object\");",
							"    for (const key in data._links) {",
							"        pm.expect(data._links[key]).to.be.an(\"array\");",
							"        for (const url of data._links[key]) {",
							"            pm.expect(typeof url).to.eql(\"string\");",
							"            pm.expect(url).to.match(",
							"                new RegExp(`^\\\\/api\\\\/v${API_VERSION}\\/`),",
							"            );",
							"        }",
							"    }",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": "{{base_url}}/titles/"
			},
			"response": []
		},
