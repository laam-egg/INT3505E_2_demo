			"name": "Test POST /titles",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"(() => {",
							"    const EDITION = Math.round(Math.random() * 10000);",
							"",
							"    const payload = {",
							"        \"name\": \"New book inserted by Postman/Newman, edition \" + EDITION,",
							"        \"edition\": EDITION,",
							"        \"authors\": \"Postman\\nNewman\\nVuTungLam\",",
							"        \"yearOfPublication\": 2025,",
							"        \"tags\": \"test\\ndemo\\nunreal\"",
							"    };",
							"",
							"    pm.environment.set(\"PAYLOAD\", JSON.stringify(payload));",
							"",
							"    pm.request.body.raw = JSON.stringify(payload);",
							"    pm.request.headers.add({",
							"        key: \"Content-Type\",",
							"        value: \"application/json\",",
							"    });",
							"",
							"    const ACCESS_TOKEN = pm.environment.get(\"ACCESS_TOKEN\");",
							"    pm.request.headers.add({",
							"        key: \"Authorization\",",
							"        value: \"Bearer \" + ACCESS_TOKEN,",
							"    });",
							"})();",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"(() => {",
							"    const PAYLOAD = pm.environment.get('PAYLOAD');",
							"",
							"    if (!PAYLOAD) {",
							"        throw new Error(\"No PAYLOAD?\");",
							"    }",
							"",
							"    pm.test(\"Status code is 200\", function () {",
							"        pm.response.to.have.status(200);",
							"    });",
							"",
							"    pm.test(\"Response body matches payload\", function () {",
							"        const responseBody = pm.response.json();",
