		{
			"name": "Test PATCH /titles/:id",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"(() => {",
							"    const TITLE_ID = pm.environment.get(\"TITLE_ID\");",
							"    if (!TITLE_ID) {",
							"        throw new Error(\"No TITLE_ID?\");",
							"    }",
							"",
							"    pm.request.url += (\"\" + TITLE_ID);",
							"",
							"    const newTitle = \"This book's title has changed at \" +",
							"        new Date().toLocaleTimeString();",
							"",
							"    pm.environment.set(\"NEW_TITLE\", newTitle);",
							"",
							"    pm.request.body.raw =",
							"        JSON.stringify({",
							"            \"name\": newTitle,",
							"        });",
							"",
							"    pm.request.headers.add({",
							"        key: \"Content-Type\",",
							"        value: \"application/json\",",
							"    });",
							"",
							"    const ACCESS_TOKEN = pm.environment.get(\"ACCESS_TOKEN\");",
							"    pm.request.headers.add({",
							"        key: \"Authorization\",",
							"        value: \"Bearer \" + ACCESS_TOKEN,",
							"    });",
							"})();",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"(() => {",
							"    const TITLE_ID = pm.environment.get(\"TITLE_ID\");",
							"    if (!TITLE_ID) {",
							"        throw new Error(\"No TITLE_ID?\");",
							"    }",
							"",
							"    const NEW_TITLE = pm.environment.get(\"NEW_TITLE\");",
							"    if (!NEW_TITLE) {",
							"        throw new Error(\"No NEW_TITLE?\");",
							"    }",
							"",
							"",
							"    pm.test(\"Status code is 200\", function () {",
							"        pm.response.to.have.status(200);",
							"    });",
							"",
							"    pm.test(\"Modified the correct document\", function () {",
							"        const jsonData = pm.response.json();",
							"        pm.expect(jsonData.content.id).to.equal(TITLE_ID);",
							"    });",
							"",
							"    pm.test(\"New title updated\", function () {",
							"        const jsonData = pm.response.json();",
							"        pm.expect(jsonData.content.name).to.equal(NEW_TITLE);",
							"    });",
							"})();",
